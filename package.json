{
  "name": "turnbased-starter",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev -w client & npm run dev -w server",
    "dev:client": "npm run dev --prefix client",
    "dev:server": "npm run dev --prefix server",
    "install:all": "npm i -w server && npm i -w client",
    "all": "npm-run-all --parallel dev:client dev:server"
  },
  "dependencies": {
    "@radix-ui/themes": "^3.2.1",
    "boardgame.io": "^0.50.2",
    "faker": "^6.6.6",
    "nes.css": "^2.2.1",
    "react95": "^4.0.0",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "sass-embedded": "^1.93.2"
  }
}
